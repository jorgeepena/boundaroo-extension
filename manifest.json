{
    "manifest_version": 3,
    "name": "Boundaroo Discovery",
    "version": "1.0",
    "description": "Discover random websites, like and save them with ease! Directly from your browser",
    "permissions": ["tabs", "storage", "activeTab", "scripting"],
    "host_permissions": ["https://boundaroo.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
  }
  